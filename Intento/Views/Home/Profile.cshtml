
@{
    ViewBag.Title = "Profile";
}


<div class="container marginTopContent pt-5">
    <!--Perfil de usuario desde la perspectiva de otro usuario-->
    <div class="row">
        <div class="col-md-3">
            <!--Menú del perfil de usuario-->
            <div class="row text-center menuBar">
                <a href="#" class="nav-item col-12 bg-light py-2">Profile</a>
                <a href="#" class="nav-item col-12 bg-light py-2">Sales History</a>
                <a href="#" class="nav-item col-12 bg-light py-2">Other</a>
            </div>
        </div>
        <div class="col-md-9">

            <div class="row">
                <!--foto del perfil-->
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="https://cdn0.vox-cdn.com/uploads/chorus_asset/file/8667595/xboxonex.jpg" alt="PlayStation 4" />
                        <div class="card-header text-center lead">
                            <span>User Name</span>
                        </div>
                    </div>

                </div>
                <!--Información basica del usuario-->
                <div class="col-md-8">
                    <form class="row">
                        <div class="col-md-6 py-2">
                            <label class="text-muted">Name</label>
                            <span class="d-block" id="userName">Jhon Doe</span>
                        </div>
                        <div class="col-md-6 py-2">
                            <label class="text-muted">Last Name</label>
                            <span class="d-block" id="lastName">Doe</span>
                        </div>
                        <div class="col-md-6 py-2">
                            <label class="text-muted">Telephone</label>
                            <span class="d-block" id="userPhone">000000000</span>
                        </div>
                        <div class="col-md-6 py-2">
                            <label class="text-muted">Mail</label>
                            <span class="d-block" id="userEmail">jhondoe@nn.ss</span>
                        </div>
                        <div class="col-12 pt-1">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>