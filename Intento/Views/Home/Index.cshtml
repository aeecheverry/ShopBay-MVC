
@{
    ViewBag.Title = "Home Page";
}

<!--Carrousel-->
<div id="carouselExampleControls" class="carousel slide marginTopContent" data-ride="carousel">
    <div class="carousel-inner " role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="http://dorkshelf.com/wordpress/wp-content/uploads//2014/08/Mission-Blue-1900x420-1408756873.jpg" alt="First slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="http://dorkshelf.com/wordpress/wp-content/uploads//2014/08/Mission-Blue-1900x420-1408756873.jpg" alt="Second slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="http://dorkshelf.com/wordpress/wp-content/uploads//2014/08/Mission-Blue-1900x420-1408756873.jpg" alt="Third slide" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container ">
    <div class="row">

        <!--Título categorias-->
        <div class="col-12 py-1 mt-3">
            <span class="display-4">Top Categories</span>
        </div>

        <div class="col-12">
            <hr />
        </div>

        <!--Contenedor cartas de categorias -->
        <div class="card-deck" id="categoriesContainer" runat="server">
            @foreach(var c in Category) {
                <div class="col-xm-12 col-sm-12 col-md-6 col-lg-4 product-item mb-4">
                    <div class="card shadowCard categoriesCard categoriesCardHover">
                        <a href="#">
                            <img class="card-img-top" src="#" alt="PlayStation 4" />
                            <div class="card-body text-center lead">
                                <h5 class="card-title titleCategories"></h5>
                            </div>
                        </a>
                    </div>
                </div>
            }


        </div>
    </div>
</div>